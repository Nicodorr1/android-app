<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <!-- Product id (pid) - will be HIDDEN - used to pass to other activity -->
    <TextView
        android:id="@+id/pid"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:visibility="gone" />

    <!-- Name Label -->
    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="6dip"
        android:paddingLeft="6dip"
        android:textSize="17dip"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/iticon"
        android:layout_toEndOf="@+id/iticon" />

    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/iticon"
        android:contentDescription="desc"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:src="@drawable/sm5" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:paddingTop="6dip"
        android:paddingLeft="6dip"
        android:text="Category: "
        android:id="@+id/cate"
        android:layout_below="@+id/name"
        android:layout_toRightOf="@+id/iticon"
        android:layout_toEndOf="@+id/iticon" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/categorie"
        android:paddingLeft="2dip"
        android:layout_alignBottom="@+id/cate"
        android:layout_toRightOf="@+id/cate"
        android:layout_toEndOf="@+id/cate" />

</RelativeLayout>