<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.nicodorr.nostress">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainScreenActivity"
            android:label="Top StressKillers"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <!-- All Product Activity -->
        <activity
            android:name=".AllProductsActivity"
            android:label="All StressKillers" />

        <!-- Add Product Activity -->
        <activity
            android:name=".NewProductActivity"
            android:label="Add New StressKiller"
            android:parentActivityName=".MainScreenActivity"/>

        <!-- Edit Product Activity -->
        <activity
            android:name=".EditProductActivity"
            android:label="Read Content"
            android:parentActivityName=".MainScreenActivity"/>
        <activity
            android:name=".ContactUs"
            android:label="Contact us" />
        <activity
            android:name=".SettingsActivity"
            android:label="@string/title_activity_settings"
            android:parentActivityName=".MainScreenActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.nicodorr.nostress.MainScreenActivity" />
        </activity>
        <activity
            android:name=".Activity3"
            android:label="@string/title_activity_3"
            android:parentActivityName=".MainScreenActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.nicodorr.nostress.MainScreenActivity" />
        </activity>
        <activity
            android:name=".WeekImage"
            android:label="@string/title_activity_week_image"
            android:parentActivityName=".MainScreenActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.nicodorr.nostress.MainScreenActivity" />
        </activity>
        <activity android:name=".Splashscreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Vote"
            android:label="@string/title_activity_vote"
            android:parentActivityName=".MainScreenActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.nicodorr.nostress.MainScreenActivity" />
        </activity>
        <activity
            android:name=".Competition"
            android:label="@string/title_activity_competition"
            android:parentActivityName=".MainScreenActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.nicodorr.nostress.MainScreenActivity" />
        </activity>
        <activity
            android:name=".Privacy"
            android:label="@string/title_activity_privacy"
            android:parentActivityName=".MainScreenActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.nicodorr.nostress.MainScreenActivity" />
        </activity>

        <service android:name=".MyFirebaseMessagingService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>

        <activity
            android:name=".Helpus"
            android:label="@string/title_activity_helpus"
            android:parentActivityName=".MainScreenActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.nicodorr.nostress.MainScreenActivity" />
        </activity>
    </application>

</manifest>